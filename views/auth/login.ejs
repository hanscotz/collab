<%- include('../partials/header', { 
    title: 'Login - Dr. Salmin Amour Sec. School',
    breadcrumbs: [{ text: 'Login' }]
}) %>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="auth-card">
            <div class="auth-header text-center mb-4">
                <div class="auth-icon mb-3">
                    <i class="fas fa-sign-in-alt"></i>
                </div>
                <h2 class="auth-title">Welcome Back</h2>
                <p class="auth-subtitle">Sign in to your account to continue</p>
            </div>
            
            <div class="card">
                <div class="card-body p-4">
                <% if (error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                </div>
                <% } %>
                
                <% if (message) { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i><%= message %>
                </div>
                <% } %>
                
                <form method="POST" action="/auth/login">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                    </div>
                </form>
                
                <hr>
                
                <div class="text-center">
                    <p class="mb-0 text-muted">Don't have an account?</p>
                    <a href="/auth/register" class="btn btn-outline-primary mt-2">
                        <i class="fas fa-user-plus me-1"></i>Register Now
                    </a>
                </div>
                </div>
            </div>
        </div>
        
        <div class="demo-accounts mt-4">
            <div class="card">
                <div class="card-header text-center">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Demo Accounts
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="demo-account">
                                <div class="demo-role">Admin</div>
                                <div class="demo-email">admin@school.com</div>
                                <div class="demo-password">admin123</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="demo-account">
                                <div class="demo-role">Parent</div>
                                <div class="demo-email">parent@school.com</div>
                                <div class="demo-password">parent123</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="demo-account">
                                <div class="demo-role">Teacher</div>
                                <div class="demo-email">teacher@school.com</div>
                                <div class="demo-password">teacher123</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 