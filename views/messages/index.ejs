<%- include('../partials/header', { 
    title: 'Messages - Dr. Salmin Amour Sec. School',
    breadcrumbs: [{ text: 'Messages' }]
}) %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-comments me-2"></i>My Conversations
                </h4>
                <a href="/messages/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>New Message
                </a>
            </div>
            <div class="card-body">
                <% if (conversations.length === 0) { %>
                <div class="text-center py-4">
                    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No conversations yet</h5>
                    <p class="text-muted">Start a conversation with another user to begin messaging.</p>
                    <a href="/messages/new" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Start New Conversation
                    </a>
                </div>
                <% } else { %>
                <div class="list-group">
                    <% conversations.forEach(conversation => { %>
                    <a href="/messages/conversation/<%= conversation.other_user_id %>" 
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <i class="fas fa-user-circle fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">
                                    <%= conversation.other_user_name %>
                                    <% if (conversation.other_user_role === 'admin') { %>
                                        <span class="badge bg-danger ms-2"><%= conversation.other_user_role %></span>
                                    <% } else if (conversation.other_user_role === 'teacher') { %>
                                        <span class="badge bg-primary ms-2"><%= conversation.other_user_role %></span>
                                    <% } else { %>
                                        <span class="badge bg-success ms-2"><%= conversation.other_user_role %></span>
                                    <% } %>
                                    <% if (conversation.unread_count > 0) { %>
                                        <span class="badge bg-danger ms-2"><%= conversation.unread_count %></span>
                                    <% } %>
                                </h6>
                                <small class="text-muted">
                                    <i class="fas fa-user-tag me-1"></i><%= conversation.other_user_role %>
                                </small>
                                <br>
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    <%= new Date(conversation.last_message_at).toLocaleDateString() %>
                                    at <%= new Date(conversation.last_message_at).toLocaleTimeString() %>
                                </small>
                            </div>
                        </div>
                        <div class="text-end">
                            <% if (conversation.unread_count > 0) { %>
                                <span class="badge bg-primary rounded-pill"><%= conversation.unread_count %> new</span>
                            <% } %>
                            <i class="fas fa-chevron-right text-muted ms-2"></i>
                        </div>
                    </a>
                    <% }); %>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-comments fa-2x mb-2"></i>
                <h5 class="card-title"><%= conversations.length %></h5>
                <p class="card-text">Total Conversations</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <i class="fas fa-envelope fa-2x mb-2"></i>
                <h5 class="card-title">
                    <%= conversations.reduce((total, conv) => total + (conv.unread_count || 0), 0) %>
                </h5>
                <p class="card-text">Unread Messages</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-users fa-2x mb-2"></i>
                <h5 class="card-title">
                    <%= conversations.filter(conv => conv.other_user_role === 'admin').length %>
                </h5>
                <p class="card-text">Admin Conversations</p>
            </div>
        </div>
    </div>
</div> 