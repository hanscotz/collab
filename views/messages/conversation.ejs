<%- include('../partials/header', { 
    title: `Conversation with ${otherUser.name} - Dr. Salmin Amour Sec. School`,
    breadcrumbs: [
        { text: 'Messages', url: '/messages' },
        { text: otherUser.name }
    ]
}) %>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-user-circle fa-2x text-primary me-3"></i>
                    <div>
                        <h5 class="mb-0"><%= otherUser.name %></h5>
                        <small class="text-muted">
                            <i class="fas fa-user-tag me-1"></i><%= otherUser.role %>
                        </small>
                    </div>
                </div>
                <a href="/messages" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Messages
                </a>
            </div>
            <div class="card-body" style="height: 400px; overflow-y: auto;">
                <% if (messages.length === 0) { %>
                <div class="text-center py-4">
                    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                    <h6 class="text-muted">No messages yet</h6>
                    <p class="text-muted">Start the conversation by sending a message below.</p>
                </div>
                <% } else { %>
                <div class="messages-container">
                    <% messages.forEach(message => { %>
                    <div class="message <%= message.sender_id === user.id ? 'message-sent' : 'message-received' %> mb-3">
                        <div class="message-content">
                            <div class="message-header">
                                <strong><%= message.sender_name %></strong>
                                <% if (message.sender_role === 'admin') { %>
                                    <span class="badge bg-danger ms-2"><%= message.sender_role %></span>
                                <% } else if (message.sender_role === 'teacher') { %>
                                    <span class="badge bg-primary ms-2"><%= message.sender_role %></span>
                                <% } else { %>
                                    <span class="badge bg-success ms-2"><%= message.sender_role %></span>
                                <% } %>
                                <small class="text-muted ms-2">
                                    <%= new Date(message.created_at).toLocaleDateString() %>
                                    at <%= new Date(message.created_at).toLocaleTimeString() %>
                                </small>
                                <% if (message.sender_id === user.id || user.role === 'admin') { %>
                                <form method="POST" action="/messages/delete/<%= message.id %>" 
                                      style="display: inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this message?')">
                                    <button type="submit" class="btn btn-sm btn-outline-danger ms-2" title="Delete Message">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                                <% } %>
                            </div>
                            <div class="message-subject">
                                <strong><%= message.subject %></strong>
                            </div>
                            <div class="message-text">
                                <%= message.message %>
                            </div>
                            <% if (!message.is_read && message.receiver_id === user.id) { %>
                            <small class="text-muted">
                                <i class="fas fa-check me-1"></i>Delivered
                            </small>
                            <% } else if (message.is_read && message.receiver_id === user.id) { %>
                            <small class="text-success">
                                <i class="fas fa-check-double me-1"></i>Read
                            </small>
                            <% } %>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-paper-plane me-2"></i>Send Message
                </h6>
            </div>
            <div class="card-body">
                <form method="POST" action="/messages/send">
                    <input type="hidden" name="receiver_id" value="<%= otherUser.id %>">
                    
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" name="subject" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="6" required 
                                  placeholder="Type your message here..."></textarea>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- User Info Card -->
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-user me-2"></i>User Information
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <strong>Name:</strong> <%= otherUser.name %>
                </div>
                <div class="mb-2">
                    <strong>Email:</strong> 
                    <a href="mailto:<%= otherUser.email %>"><%= otherUser.email %></a>
                </div>
                <div class="mb-2">
                    <strong>Role:</strong> 
                    <span class="badge bg-primary"><%= otherUser.role %></span>
                </div>
                <div class="mb-2">
                    <strong>Member since:</strong> 
                    <%= new Date(otherUser.created_at).toLocaleDateString() %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.messages-container {
    padding: 10px;
}

.message {
    display: flex;
    margin-bottom: 15px;
}

.message-sent {
    justify-content: flex-end;
}

.message-received {
    justify-content: flex-start;
}

.message-content {
    max-width: 70%;
    padding: 10px 15px;
    border-radius: 15px;
    position: relative;
}

.message-sent .message-content {
    background-color: #007bff;
    color: white;
    border-bottom-right-radius: 5px;
}

.message-received .message-content {
    background-color: #f8f9fa;
    color: #333;
    border-bottom-left-radius: 5px;
}

.message-header {
    margin-bottom: 5px;
    font-size: 0.9em;
}

.message-subject {
    margin-bottom: 8px;
    font-weight: bold;
}

.message-text {
    line-height: 1.4;
    white-space: pre-wrap;
}
</style>

<script>
// Auto-scroll to bottom of messages
document.addEventListener('DOMContentLoaded', function() {
    const messagesContainer = document.querySelector('.card-body');
    if (messagesContainer) {
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }
});
</script> 