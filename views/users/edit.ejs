<%- include('../partials/header', { 
    title: 'Edit User - Dr. Salmin Amour Sec. School',
    breadcrumbs: [
        { text: 'User Management', url: '/users' },
        { text: 'Edit User' }
    ]
}) %>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-edit me-2"></i>Edit User
                </h4>
            </div>
            <div class="card-body">
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                </div>
                <% } %>
                
                <form method="POST" action="/users/edit/<%= userToEdit.id %>">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" id="name" name="name" 
                                           value="<%= userToEdit.name %>" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input type="email" class="form-control" id="email" name="email" 
                                           value="<%= userToEdit.email %>" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="role" class="form-label">Role *</label>
                                <select class="form-select" id="role" name="role" required>
                                    <option value="admin" <%= userToEdit.role === 'admin' ? 'selected' : '' %>>Administrator</option>
                                    <option value="teacher" <%= userToEdit.role === 'teacher' ? 'selected' : '' %>>Teacher</option>
                                    <option value="parent" <%= userToEdit.role === 'parent' ? 'selected' : '' %>>Parent</option>
                                </select>
                                <small class="form-text text-muted">Choose the appropriate role for this user</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="password" class="form-label">New Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" id="password" name="password" 
                                           minlength="6" placeholder="Leave blank to keep current password">
                                </div>
                                <small class="form-text text-muted">Minimum 6 characters. Leave blank to keep current password.</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/users" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update User
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- User Information -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>User Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <strong>User ID:</strong> <%= userToEdit.id %>
                        </div>
                        <div class="mb-2">
                            <strong>Created:</strong> <%= new Date(userToEdit.created_at).toLocaleDateString() %>
                        </div>
                        <div class="mb-2">
                            <strong>Last Updated:</strong> 
                            <%= userToEdit.updated_at ? new Date(userToEdit.updated_at).toLocaleDateString() : 'Never' %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-2">
                            <strong>Current Role:</strong> 
                            <% if (userToEdit.role === 'admin') { %>
                                <span class="badge bg-danger"><%= userToEdit.role %></span>
                            <% } else if (userToEdit.role === 'teacher') { %>
                                <span class="badge bg-primary"><%= userToEdit.role %></span>
                            <% } else { %>
                                <span class="badge bg-success"><%= userToEdit.role %></span>
                            <% } %>
                        </div>
                        <% if (userToEdit.role === 'parent') { %>
                        <div class="mb-2">
                            <strong>Approval Status:</strong> 
                            <% if (userToEdit.is_approved) { %>
                                <span class="badge bg-success">Approved</span>
                            <% } else { %>
                                <span class="badge bg-warning text-dark">Pending Approval</span>
                            <% } %>
                        </div>
                        <% } %>
                        <div class="mb-2">
                            <strong>Email:</strong> 
                            <a href="mailto:<%= userToEdit.email %>"><%= userToEdit.email %></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Role Information -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Role Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-user-shield fa-2x text-danger mb-2"></i>
                            <h6>Administrator</h6>
                            <small class="text-muted">
                                Full system access, user management, all features
                            </small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-chalkboard-teacher fa-2x text-primary mb-2"></i>
                            <h6>Teacher</h6>
                            <small class="text-muted">
                                Create posts, manage comments, send messages
                            </small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-user-friends fa-2x text-success mb-2"></i>
                            <h6>Parent</h6>
                            <small class="text-muted">
                                View posts, add comments, send messages
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 