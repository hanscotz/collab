<%- include('../partials/header', { 
    title: 'Edit Post - Dr. Salmin Amour Sec. School',
    breadcrumbs: [
        { text: 'Announcements', url: '/posts' },
        { text: post.title, url: `/posts/${post.id}` },
        { text: 'Edit' }
    ]
}) %>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Announcement
                </h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/posts/<%= post.id %>/edit">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="title" name="title" 
                               value="<%= post.title %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="category" class="form-label">Category *</label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="announcement" <%= post.category === 'announcement' ? 'selected' : '' %>>Announcement</option>
                            <option value="event" <%= post.category === 'event' ? 'selected' : '' %>>Event</option>
                            <option value="news" <%= post.category === 'news' ? 'selected' : '' %>>News</option>
                            <option value="general" <%= post.category === 'general' ? 'selected' : '' %>>General</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="visibility" class="form-label">Visibility *</label>
                        <select class="form-select" id="visibility" name="visibility" required>
                            <option value="all" <%= post.visibility === 'all' ? 'selected' : '' %>>All Users</option>
                            <option value="teachers" <%= post.visibility === 'teachers' ? 'selected' : '' %>>Teachers Only</option>
                            <option value="parents" <%= post.visibility === 'parents' ? 'selected' : '' %>>Parents Only</option>
                        </select>
                        <small class="form-text text-muted">
                            Choose who can see this post
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <label for="target_grades" class="form-label">Target Grades</label>
                        <select class="form-select" id="target_grades" name="target_grades">
                            <option value="all" <%= post.target_grades === 'all' ? 'selected' : '' %>>All Grades</option>
                            <option value="Form I" <%= post.target_grades === 'Form I' ? 'selected' : '' %>>Form I Only</option>
                            <option value="Form II" <%= post.target_grades === 'Form II' ? 'selected' : '' %>>Form II Only</option>
                            <option value="Form III" <%= post.target_grades === 'Form III' ? 'selected' : '' %>>Form III Only</option>
                            <option value="Form IV" <%= post.target_grades === 'Form IV' ? 'selected' : '' %>>Form IV Only</option>
                            <option value="Form I,Form II" <%= post.target_grades === 'Form I,Form II' ? 'selected' : '' %>>Form I & II</option>
                            <option value="Form III,Form IV" <%= post.target_grades === 'Form III,Form IV' ? 'selected' : '' %>>Form III & IV</option>
                            <option value="Form I,Form III" <%= post.target_grades === 'Form I,Form III' ? 'selected' : '' %>>Form I & III</option>
                            <option value="Form I,Form IV" <%= post.target_grades === 'Form I,Form IV' ? 'selected' : '' %>>Form I & IV</option>
                            <option value="Form II,Form III" <%= post.target_grades === 'Form II,Form III' ? 'selected' : '' %>>Form II & III</option>
                        </select>
                        <small class="form-text text-muted">
                            Select specific grades for targeted announcements (parents will only see announcements relevant to their children's grades)
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <label for="content" class="form-label">Content *</label>
                        <textarea class="form-control" id="content" name="content" rows="8" required><%= post.content %></textarea>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/posts/<%= post.id %>" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update Post
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 