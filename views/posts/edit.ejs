<%- include('../partials/header', { 
    title: 'Edit Post - Dr. Salmin Amour Sec. School',
    breadcrumbs: [
        { text: 'Announcements', url: '/posts' },
        { text: post.title, url: `/posts/${post.id}` },
        { text: 'Edit' }
    ]
}) %>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Announcement
                </h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/posts/<%= post.id %>/edit">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="title" name="title" 
                               value="<%= post.title %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="category" class="form-label">Category *</label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="announcement" <%= post.category === 'announcement' ? 'selected' : '' %>>Announcement</option>
                            <option value="event" <%= post.category === 'event' ? 'selected' : '' %>>Event</option>
                            <option value="news" <%= post.category === 'news' ? 'selected' : '' %>>News</option>
                            <option value="general" <%= post.category === 'general' ? 'selected' : '' %>>General</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="visibility" class="form-label">Visibility *</label>
                        <select class="form-select" id="visibility" name="visibility" required>
                            <option value="all" <%= post.visibility === 'all' ? 'selected' : '' %>>All Users</option>
                            <option value="teachers" <%= post.visibility === 'teachers' ? 'selected' : '' %>>Teachers Only</option>
                            <option value="parents" <%= post.visibility === 'parents' ? 'selected' : '' %>>Parents Only</option>
                        </select>
                        <small class="form-text text-muted">
                            Choose who can see this post
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <label for="class_id" class="form-label">Target Class</label>
                        <select class="form-select" id="class_id" name="class_id">
                            <option value="" <%= !post.class_id ? 'selected' : '' %>>General Announcement (All Classes)</option>
                            <option value="1" <%= post.class_id === 1 ? 'selected' : '' %>>Form I A</option>
                            <option value="2" <%= post.class_id === 2 ? 'selected' : '' %>>Form I B</option>
                            <option value="3" <%= post.class_id === 3 ? 'selected' : '' %>>Form II A</option>
                            <option value="4" <%= post.class_id === 4 ? 'selected' : '' %>>Form II B</option>
                            <option value="5" <%= post.class_id === 5 ? 'selected' : '' %>>Form III A</option>
                            <option value="6" <%= post.class_id === 6 ? 'selected' : '' %>>Form III B</option>
                            <option value="7" <%= post.class_id === 7 ? 'selected' : '' %>>Form IV A</option>
                            <option value="8" <%= post.class_id === 8 ? 'selected' : '' %>>Form IV B</option>
                        </select>
                        <small class="form-text text-muted">
                            Select a specific class for targeted announcements (parents will only see announcements for classes their children are enrolled in)
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <label for="content" class="form-label">Content *</label>
                        <textarea class="form-control" id="content" name="content" rows="8" required><%= post.content %></textarea>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/posts/<%= post.id %>" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update Post
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 