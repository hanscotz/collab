<%- include('../partials/header', { 
    title: 'Create New Post - Dr. Salmin Amour Sec. School',
    breadcrumbs: [
        { text: 'Announcements', url: '/posts' },
        { text: 'Create New Post' }
    ]
}) %>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-plus me-2"></i>Create New Announcement
                </h4>
            </div>
            <div class="card-body">
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                </div>
                <% } %>
                
                <form method="POST" action="/posts">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="title" name="title" 
                               placeholder="Enter announcement title..." required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="category" class="form-label">Category *</label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="">Select a category</option>
                            <option value="announcement">Announcement</option>
                            <option value="event">Event</option>
                            <option value="news">News</option>
                            <option value="general">General</option>
                        </select>
                        <small class="form-text text-muted">
                            Choose the most appropriate category for your post
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <label for="visibility" class="form-label">Visibility *</label>
                        <select class="form-select" id="visibility" name="visibility" required>
                            <option value="">Select visibility</option>
                            <option value="all">All Users</option>
                            <option value="teachers">Teachers Only</option>
                            <option value="parents">Parents Only</option>
                        </select>
                        <small class="form-text text-muted">
                            Choose who can see this post
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <label for="target_grades" class="form-label">Target Grades</label>
                        <select class="form-select" id="target_grades" name="target_grades">
                            <option value="all">All Grades</option>
                            <option value="Form I">Form I Only</option>
                            <option value="Form II">Form II Only</option>
                            <option value="Form III">Form III Only</option>
                            <option value="Form IV">Form IV Only</option>
                            <option value="Form I,Form II">Form I & II</option>
                            <option value="Form III,Form IV">Form III & IV</option>
                            <option value="Form I,Form III">Form I & III</option>
                            <option value="Form I,Form IV">Form I & IV</option>
                            <option value="Form II,Form III">Form II & III</option>
                        </select>
                        <small class="form-text text-muted">
                            Select specific grades for targeted announcements (parents will only see announcements relevant to their children's grades)
                        </small>
                    </div>
                    
                    <div class="mb-3">
                        <label for="content" class="form-label">Content *</label>
                        <textarea class="form-control" id="content" name="content" rows="8" 
                                  placeholder="Write your announcement content here..." required></textarea>
                        <small class="form-text text-muted">
                            You can use line breaks to format your content
                        </small>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/posts" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>Publish Post
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Guidelines -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Posting Guidelines
                </h5>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>Keep titles clear and concise</li>
                    <li>Use appropriate categories to help parents find relevant information</li>
                    <li>Write content that is easy to understand</li>
                    <li>Include important dates and deadlines when applicable</li>
                    <li>Be professional and respectful in your communication</li>
                </ul>
            </div>
        </div>
    </div>
</div> 