<%- include('../partials/header', { 
    title: 'My Students - Dr. Salmin Amour Sec. School',
    breadcrumbs: [{ text: 'My Students' }]
}) %>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-users me-2"></i>My Students
                </h1>
                <a href="/students/add" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add Student
                </a>
            </div>

            <% if (error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                </div>
            <% } %>

            <% if (pendingApproval) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Student Added Successfully!</strong> Your student has been submitted for admin approval. You will be notified once the approval is complete.
                </div>
            <% } %>

            <% if (students.length === 0) { %>
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-user-graduate fa-3x text-muted"></i>
                        </div>
                        <h4 class="text-muted">No Students Added Yet</h4>
                        <p class="text-muted mb-4">You need to add at least one student to access school announcements and communications.</p>
                        <a href="/students/add" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add Your First Student
                        </a>
                    </div>
                </div>
            <% } else { %>
                <div class="row">
                    <% students.forEach(function(student) { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 <%= !student.is_approved ? 'border-warning' : '' %>">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="card-title mb-1">
                                                <%= student.first_name %> <%= student.last_name %>
                                            </h5>
                                            <p class="text-muted mb-0">
                                                <i class="fas fa-id-card me-1"></i><%= student.index_no %>
                                            </p>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-primary mb-1"><%= student.grade %></span>
                                            <% if (!student.is_approved) { %>
                                                <div class="badge bg-warning text-dark">
                                                    <i class="fas fa-clock me-1"></i>Pending Approval
                                                </div>
                                            <% } else { %>
                                                <div class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Approved
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-3">
                                        <% if (student.is_approved) { %>
                                            <a href="/students/edit/<%= student.id %>" class="btn btn-outline-primary btn-sm me-2">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-sm" 
                                                    onclick="confirmDelete(<%= student.id %>, '<%= student.first_name %> <%= student.last_name %>')">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        <% } else { %>
                                            <div class="alert alert-warning py-2 mb-0">
                                                <small>
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    This student is pending admin approval. You cannot edit or delete until approved.
                                                </small>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <div class="alert alert-info mt-4">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Note:</strong> You can add multiple students to your account. Each student will be associated with their respective grade-level announcements and communications.
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="studentName"></strong>?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(studentId, studentName) {
    document.getElementById('studentName').textContent = studentName;
    document.getElementById('deleteForm').action = `/students/delete/${studentId}`;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script> 