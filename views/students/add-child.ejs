<%- include('../partials/header', { 
    title: 'Add New Child',
    breadcrumbs: [{ text: 'My Children', link: '/students/my-children' }, { text: 'Add New Child' }]
}) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>Add New Child
                    </h4>
                </div>
                <div class="card-body">
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                        </div>
                    <% } %>

                    <form action="/students/my-children/add" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="index_no" class="form-label">Index Number *</label>
                                <input type="text" class="form-control" id="index_no" name="index_no" required>
                                <div class="form-text">Unique student identification number</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="grade" class="form-label">Grade *</label>
                                <select class="form-select" id="grade" name="grade" required>
                                    <option value="">Select Grade</option>
                                    <option value="Form I">Form I</option>
                                    <option value="Form II">Form II</option>
                                    <option value="Form III">Form III</option>
                                    <option value="Form IV">Form IV</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="first_name" class="form-label">First Name *</label>
                                <input type="text" class="form-control" id="first_name" name="first_name" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="last_name" class="form-label">Last Name *</label>
                                <input type="text" class="form-control" id="last_name" name="last_name" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="class_id" class="form-label">Class Section *</label>
                            <select class="form-select" id="class_id" name="class_id" required>
                                <option value="">First select a Grade</option>
                            </select>
                            <div class="form-text">Select the specific section (A, B, C, or D) for the chosen grade</div>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-2"></i>Important Information</h6>
                            <ul class="mb-0">
                                <li>All fields marked with * are required</li>
                                <li>Select a grade first, then choose the appropriate section</li>
                                <li>Your child will be reviewed by an administrator</li>
                                <li>You will be notified once they are approved</li>
                                <li>Only approved children will be able to access class-specific announcements</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/students/my-children" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to My Children
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add Child
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Dynamic class loading based on grade selection
document.getElementById('grade').addEventListener('change', function() {
    const grade = this.value;
    const classSelect = document.getElementById('class_id');
    
    // Clear current options
    classSelect.innerHTML = '<option value="">Select Section</option>';
    
    if (grade) {
        // Fetch classes for the selected grade
        fetch(`/students/api/classes/${encodeURIComponent(grade)}`)
            .then(response => response.json())
            .then(classes => {
                classes.forEach(classItem => {
                    const option = document.createElement('option');
                    option.value = classItem.id;
                    option.textContent = `${classItem.name} (Section ${classItem.section})`;
                    classSelect.appendChild(option);
                });
            })
            .catch(error => {
                console.error('Error loading classes:', error);
                classSelect.innerHTML = '<option value="">Error loading sections</option>';
            });
    }
});
</script>

<style>
.card {
    border: none;
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
    border-bottom: none;
}

.btn {
    border-radius: 8px;
    padding: 12px 24px;
}
</style>

