<%- include('../partials/header', { 
    title: 'Add New Student',
    breadcrumbs: [{ text: 'Students', url: '/students' }, { text: 'Add New Student' }]
}) %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>Add New Student
                </h4>
            </div>
            <div class="card-body">
                <% if (typeof welcome !== 'undefined' && welcome) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Welcome!</strong> You can now add students to the system.
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                    </div>
                <% } %>

                <form method="POST" action="/students">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="index_no" class="form-label">Student Index Number *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-id-card"></i>
                                    </span>
                                    <input type="text" class="form-control" id="index_no" name="index_no" required>
                                </div>
                                <small class="form-text text-muted">Enter the official school index number</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="grade" class="form-label">Grade *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-graduation-cap"></i>
                                    </span>
                                    <select class="form-select" id="grade" name="grade" required>
                                        <option value="">Select Grade</option>
                                        <option value="Form I">Form I</option>
                                        <option value="Form II">Form II</option>
                                        <option value="Form III">Form III</option>
                                        <option value="Form IV">Form IV</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="first_name" class="form-label">First Name *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" id="first_name" name="first_name" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="last_name" class="form-label">Last Name *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" id="last_name" name="last_name" required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="parent_id" class="form-label">Parent *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-users"></i>
                                    </span>
                                    <select class="form-select" id="parent_id" name="parent_id" required>
                                        <option value="">Select Parent</option>
                                        <% parents.forEach(function(parent) { %>
                                            <option value="<%= parent.id %>"><%= parent.name %> (<%= parent.email %>)</option>
                                        <% }); %>
                                    </select>
                                </div>
                                <small class="form-text text-muted">Only approved parents are shown</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="class_id" class="form-label">Class Section *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-chalkboard"></i>
                                    </span>
                                    <select class="form-select" id="class_id" name="class_id" required>
                                        <option value="">First select a Grade</option>
                                    </select>
                                </div>
                                <small class="form-text text-muted">Select the specific section (A, B, C, or D) for the chosen grade</small>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Important:</strong> Class assignments determine which announcements students can see. 
                        Students will be assigned to the specific section (A, B, C, or D) of the selected grade.
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/students" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Students
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add Student
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Dynamic class loading based on grade selection
document.getElementById('grade').addEventListener('change', function() {
    const grade = this.value;
    const classSelect = document.getElementById('class_id');
    
    // Clear current options
    classSelect.innerHTML = '<option value="">Select Section</option>';
    
    if (grade) {
        // Fetch classes for the selected grade
        fetch(`/students/api/classes/${encodeURIComponent(grade)}`)
            .then(response => response.json())
            .then(classes => {
                classes.forEach(classItem => {
                    const option = document.createElement('option');
                    option.value = classItem.id;
                    option.textContent = `${classItem.name} (Section ${classItem.section})`;
                    classSelect.appendChild(option);
                });
            })
            .catch(error => {
                console.error('Error loading classes:', error);
                classSelect.innerHTML = '<option value="">Error loading sections</option>';
            });
    }
});
</script> 