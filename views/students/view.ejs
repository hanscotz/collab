<%- include('../partials/header', { 
    title: `Student Details - ${student.first_name} ${student.last_name}`,
    breadcrumbs: [
        { text: 'Students', url: '/students/all' },
        { text: `${student.first_name} ${student.last_name}` }
    ]
}) %>

<div class="row">
    <div class="col-lg-8">
        <!-- Student Information Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-graduate me-2"></i>Student Information
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Index Number:</strong></td>
                                <td><span class="badge bg-secondary fs-6"><%= student.index_no %></span></td>
                            </tr>
                            <tr>
                                <td><strong>First Name:</strong></td>
                                <td><%= student.first_name %></td>
                            </tr>
                            <tr>
                                <td><strong>Last Name:</strong></td>
                                <td><%= student.last_name %></td>
                            </tr>
                            <tr>
                                <td><strong>Full Name:</strong></td>
                                <td><strong><%= student.first_name %> <%= student.last_name %></strong></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Grade:</strong></td>
                                <td><span class="badge bg-primary fs-6"><%= student.grade %></span></td>
                            </tr>
                            <tr>
                                <td><strong>Student ID:</strong></td>
                                <td><code><%= student.id %></code></td>
                            </tr>
                            <tr>
                                <td><strong>Created:</strong></td>
                                <td><%= new Date(student.created_at).toLocaleDateString() %></td>
                            </tr>
                            <tr>
                                <td><strong>Last Updated:</strong></td>
                                <td><%= new Date(student.updated_at).toLocaleDateString() %></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Parent Information Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-friends me-2"></i>Parent Information
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Parent Name:</strong></td>
                                <td><%= student.parent_name %></td>
                            </tr>
                            <tr>
                                <td><strong>Parent Email:</strong></td>
                                <td>
                                    <a href="mailto:<%= student.parent_email %>" class="text-decoration-none">
                                        <i class="fas fa-envelope me-1"></i><%= student.parent_email %>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Parent ID:</strong></td>
                                <td><code><%= student.parent_id %></code></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Account Status:</strong></td>
                                <td>
                                    <% if (student.parent_approved) { %>
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check me-1"></i>Approved
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-warning fs-6">
                                            <i class="fas fa-clock me-1"></i>Pending Approval
                                        </span>
                                    <% } %>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Account Created:</strong></td>
                                <td><%= new Date(student.parent_created_at).toLocaleDateString() %></td>
                            </tr>
                            <tr>
                                <td><strong>Actions:</strong></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/users/<%= student.parent_id %>" class="btn btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>View Parent
                                        </a>
                                        <a href="/messages/new?to=<%= encodeURIComponent(student.parent_email) %>" class="btn btn-outline-info">
                                            <i class="fas fa-comment me-1"></i>Contact
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Quick Actions Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-tools me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/messages/new?to=<%= encodeURIComponent(student.parent_email) %>" class="btn btn-primary">
                        <i class="fas fa-comment me-2"></i>Send Message to Parent
                    </a>
                    <a href="/users/<%= student.parent_id %>" class="btn btn-outline-primary">
                        <i class="fas fa-user me-2"></i>View Parent Profile
                    </a>
                    <a href="/students/all" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to All Students
                    </a>
                </div>
            </div>
        </div>

        <!-- Student Statistics Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Quick Stats
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-primary mb-0"><%= student.grade %></h4>
                            <small class="text-muted">Grade</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success mb-0">
                            <% if (student.parent_approved) { %>
                                <i class="fas fa-check"></i>
                            <% } else { %>
                                <i class="fas fa-clock"></i>
                            <% } %>
                        </h4>
                        <small class="text-muted">Status</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Information Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Related Information
                </h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-bullhorn me-2 text-primary"></i>
                        <a href="/posts?grade=<%= encodeURIComponent(student.grade) %>" class="text-decoration-none">
                            View <%= student.grade %> Announcements
                        </a>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-users me-2 text-info"></i>
                        <a href="/students/all?grade=<%= encodeURIComponent(student.grade) %>" class="text-decoration-none">
                            View Other <%= student.grade %> Students
                        </a>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-envelope me-2 text-success"></i>
                        <a href="/messages?user=<%= student.parent_id %>" class="text-decoration-none">
                            View Message History
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Student Management</h5>
                        <small class="text-muted">Administrative actions for this student</small>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-outline-warning" onclick="editStudent(<%= student.id %>)">
                            <i class="fas fa-edit me-1"></i>Edit Student
                        </button>
                        <button class="btn btn-outline-danger" onclick="deleteStudent(<%= student.id %>)">
                            <i class="fas fa-trash me-1"></i>Delete Student
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function editStudent(studentId) {
    if (confirm('Do you want to edit this student\'s information?')) {
        window.location.href = `/students/${studentId}/edit`;
    }
}

function deleteStudent(studentId) {
    if (confirm('Are you sure you want to delete this student? This action cannot be undone.')) {
        // This would typically be a POST request to delete the student
        alert('Delete functionality would be implemented here.');
    }
}

// Initialize tooltips
document.addEventListener('DOMContentLoaded', function() {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script> 