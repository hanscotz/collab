<%- include('../partials/header', { 
    title: 'Edit Student',
    breadcrumbs: [{ text: 'Students', url: '/students' }, { text: 'Edit Student' }]
}) %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-edit me-2"></i>Edit Student
                </h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/students/<%= student.id %>/edit">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="index_no" class="form-label">Student Index Number *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-id-card"></i>
                                    </span>
                                    <input type="text" class="form-control" id="index_no" name="index_no" value="<%= student.index_no %>" required>
                                </div>
                                <small class="form-text text-muted">Enter the official school index number</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="grade" class="form-label">Grade *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-graduation-cap"></i>
                                    </span>
                                    <select class="form-select" id="grade" name="grade" required>
                                        <option value="">Select Grade</option>
                                        <option value="Form I" <%= student.grade === 'Form I' ? 'selected' : '' %>>Form I</option>
                                        <option value="Form II" <%= student.grade === 'Form II' ? 'selected' : '' %>>Form II</option>
                                        <option value="Form III" <%= student.grade === 'Form III' ? 'selected' : '' %>>Form III</option>
                                        <option value="Form IV" <%= student.grade === 'Form IV' ? 'selected' : '' %>>Form IV</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="first_name" class="form-label">First Name *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" id="first_name" name="first_name" value="<%= student.first_name %>" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="last_name" class="form-label">Last Name *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" id="last_name" name="last_name" value="<%= student.last_name %>" required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="parent_id" class="form-label">Parent *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-users"></i>
                                    </span>
                                    <select class="form-select" id="parent_id" name="parent_id" required>
                                        <option value="">Select Parent</option>
                                        <% parents.forEach(function(parent) { %>
                                            <option value="<%= parent.id %>" <%= student.parent_id == parent.id ? 'selected' : '' %>><%= parent.name %> (<%= parent.email %>)</option>
                                        <% }); %>
                                    </select>
                                </div>
                                <small class="form-text text-muted">Only approved parents are shown</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="class_id" class="form-label">Class Section *</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-chalkboard"></i>
                                    </span>
                                    <select class="form-select" id="class_id" name="class_id" required>
                                        <option value="">Select Section</option>
                                    </select>
                                </div>
                                <small class="form-text text-muted">Select the specific section (A, B, C, or D) for the chosen grade</small>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> Class assignments determine which announcements students can see. 
                        Students will be assigned to the specific section (A, B, C, or D) of the selected grade.
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/students" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Students
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update Student
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Store current class ID for pre-selection
const currentClassId = '<%= student.class_id %>';

// Dynamic class loading based on grade selection
document.getElementById('grade').addEventListener('change', function() {
    const grade = this.value;
    const classSelect = document.getElementById('class_id');
    
    // Clear current options
    classSelect.innerHTML = '<option value="">Select Section</option>';
    
    if (grade) {
        // Fetch classes for the selected grade
        fetch(`/students/api/classes/${encodeURIComponent(grade)}`)
            .then(response => response.json())
            .then(classes => {
                classes.forEach(classItem => {
                    const option = document.createElement('option');
                    option.value = classItem.id;
                    option.textContent = `${classItem.name} (Section ${classItem.section})`;
                    
                    // Pre-select if this was the current class
                    if (classItem.id == currentClassId) {
                        option.selected = true;
                    }
                    
                    classSelect.appendChild(option);
                });
            })
            .catch(error => {
                console.error('Error loading classes:', error);
                classSelect.innerHTML = '<option value="">Error loading sections</option>';
            });
    }
});

// Load classes on page load if grade is already selected
document.addEventListener('DOMContentLoaded', function() {
    const gradeSelect = document.getElementById('grade');
    if (gradeSelect.value) {
        gradeSelect.dispatchEvent(new Event('change'));
    }
});
</script> 